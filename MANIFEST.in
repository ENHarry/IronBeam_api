# Include core documentation files
include README.md
include LICENSE

# Include package metadata
include pyproject.toml

# Include type hints marker
include ironbeam/py.typed

# Include documentation directory (optional for users)
recursive-include docs *.md

# Include examples directory (for user reference)
recursive-include examples *.py
recursive-include examples *.md

# Exclude development and build files that exist
exclude .gitignore
exclude package.json
exclude openapi.json

# Exclude development directories that exist
recursive-exclude scripts *
recursive-exclude tests *
recursive-exclude __pycache__ *
recursive-exclude .git *
recursive-exclude .claude *

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
